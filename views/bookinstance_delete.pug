extends layout

block content
  h1 #{title}: 
    
  p Book: 
    a(href=book_instance.book.url) #{book_instance.book.title}
  p Instance: 
    a(href=book_instance.url) #{book_instance._id}
  hr
  p Are you sure you want to delete this book instance?

  form(method='POST')
    div.form-group
      input#bookinstanceid.form-control(type='hidden', name='bookinstanceid', value=book_instance._id)
    button.btn.btn-primary(type='submit') Delete
