extends layout

block content

  h1 #{title}: #{book.title}

  if bookinstances.length

    p #[strong Delete the following book instances before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Instances
      dl
        each instance in bookinstances
          dt
            a(href=instance.url) #{book.title}
          dd #{instance.imprint}
          if instance.status==='Available'
            span.text-success #{instance.status}
          else if instance.status==='Maintenance'
            span.text-danger #{instance.status}
          else 
            span.text-warning #{instance.status}
          hr

  else
    p Do you really want to delete this book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete
